---
interface Props {
  title: string;
  description: string;
  image: string;
  link?: string;
}

const { title, description, image, link } = Astro.props;
---

<div class="epilsoft-service-card">
  <div class="service-image">
    <img src={image} alt={title} loading="lazy" />
  </div>
  <div class="service-content">
    <h3>{title}</h3>
    <p>{description}</p>
    {link && (
      <a href={link} class="service-link">
        En savoir plus
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    )}
  </div>
</div>

<style>
  .epilsoft-service-card {
    background: var(--background-white);
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: all var(--transition-normal);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .epilsoft-service-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-hover);
  }

  .service-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 4/3;
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .epilsoft-service-card:hover .service-image img {
    transform: scale(1.1);
  }

  .service-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .service-content h3 {
    font-family: var(--font-title);
    font-size: 1.4rem;
    color: var(--dark-text);
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .service-content p {
    color: var(--light-text);
    line-height: 1.7;
    margin-bottom: 1rem;
    flex: 1;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary-gold);
    font-weight: 600;
    font-size: 0.95rem;
    transition: all var(--transition-fast);
    text-decoration: none;
  }

  .service-link:hover {
    color: var(--gold-dark);
    gap: 0.75rem;
  }

  .service-link svg {
    transition: transform var(--transition-fast);
  }

  .service-link:hover svg {
    transform: translateX(5px);
  }
</style>
