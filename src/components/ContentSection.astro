---
interface Props {
  subtitle?: string;
  title: string;
  content: string;
  image: string;
  imagePosition?: 'left' | 'right';
  features?: string[];
  ctaText?: string;
  ctaLink?: string;
}

const { 
  subtitle, 
  title, 
  content, 
  image, 
  imagePosition = 'right',
  features,
  ctaText,
  ctaLink
} = Astro.props;
---

<section class="epilsoft-content-section">
  <div class="container">
    <div class={`content-grid ${imagePosition === 'left' ? 'image-left' : ''}`}>
      <div class="content-image">
        <img src={image} alt={title} loading="lazy" />
      </div>
      
      <div class="content-text">
        {subtitle && <span class="content-subtitle">{subtitle}</span>}
        <h2>{title}</h2>
        <p set:html={content} />
        
        {features && features.length > 0 && (
          <ul class="feature-list">
            {features.map(feature => (
              <li>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        )}
        
        {ctaText && ctaLink && (
          <div class="content-cta">
            <a href={ctaLink} class="btn btn-primary">{ctaText}</a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .epilsoft-content-section {
    padding: clamp(3rem, 8vw, 6rem) 1.5rem;
    background-color: #fff;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 4rem;
  }

  .content-grid.image-left {
    direction: rtl;
  }

  .content-grid.image-left > * {
    direction: ltr;
  }

  .content-image {
    position: relative;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow);
  }

  .content-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .content-image:hover img {
    transform: scale(1.05);
  }

  .content-text {
    max-width: 600px;
  }

  .content-subtitle {
    display: inline-block;
    text-transform: uppercase;
    color: var(--primary-gold);
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .content-text h2 {
    font-family: var(--font-title);
    color: var(--dark-text);
    font-weight: 600;
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }

  .content-text p {
    color: var(--light-text);
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .feature-list {
    list-style: none;
    margin: 2rem 0;
    padding: 0;
  }

  .feature-list li {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
    color: var(--dark-text);
  }

  .feature-list svg {
    color: var(--primary-gold);
    flex-shrink: 0;
    margin-top: 4px;
  }

  .content-cta {
    margin-top: 2rem;
  }

  @media (max-width: 991px) {
    .content-grid,
    .content-grid.image-left {
      grid-template-columns: 1fr;
      direction: ltr;
      gap: 2rem;
    }

    .content-image {
      order: -1;
    }

    .content-text {
      text-align: center;
      max-width: 100%;
    }

    .feature-list li {
      text-align: left;
    }
  }
</style>
