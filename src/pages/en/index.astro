---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { translations } from '../../i18n';

const lang = 'en';
const t = translations[lang];
---

<Layout 
  title="Epilsoft - Laser Hair Removal in Brussels | Uccle & Etterbeek"
  description={t.metaDescription}
  lang={lang}
  canonical="https://epilsoft.be/en/"
>
  <Header lang={lang} />
  
  <main>
    <section class="hero">
      <div class="container">
        <h1>{t.heroTitle}</h1>
        <p class="hero-subtitle">{t.heroSubtitle}</p>
        <a href="/en/contact" class="btn btn-primary">{t.heroCTA}</a>
      </div>
    </section>
    
    <!-- Add your content here -->
  </main>
  
  <Footer lang={lang} />
</Layout>

<style>
  .hero {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: linear-gradient(135deg, #f9f9f9 0%, #ffffff 100%);
  }
  
  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-light);
    margin-bottom: 2rem;
  }
  
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1rem;
    }
  }
</style>
