    line-height: 28px;
    color: #666;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .included-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .steps-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
    }

    .zones-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 800px) {
    .consultation-page {
      padding-top: 130px;
    }

    .hero-consultation {
      padding: 60px 0;
    }

    .hero-subtitle {
      font-size: 16px;
      line-height: 28px;
    }

    .section-included,
    .section-how-it-works,
    .section-zones,
