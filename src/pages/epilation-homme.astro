      { src: '/images/homme/jambes-2.jpg', alt: 'Résultat épilation jambes complètes' },
      { src: '/images/homme/jambes-3.jpg', alt: 'Épilation laser tibias' },
      { src: '/images/homme/jambes-4.jpg', alt: 'Épilation jambes homme' },
      { src: '/images/homme/jambes-5.jpg', alt: 'Résultat épilation laser jambes' }
    ]
  },
  {
    id: 'visage',
    name: 'Visage',
    images: [
      { src: '/images/homme/visage-1.jpg', alt: 'Épilation laser visage complet' },
      { src: '/images/homme/visage-2.jpg', alt: 'Épilation barbe et menton' },
      { src: '/images/homme/visage-3.jpg', alt: 'Épilation cou homme' },
      { src: '/images/homme/visage-4.jpg', alt: 'Résultat épilation glabelle' }
    ]
  },
  {
    id: 'poitrine-abdomen',
    name: 'Poitrine et Abdomen',
    images: [
      { src: '/images/homme/torse-1.jpg', alt: 'Épilation laser poitrine homme' },
      { src: '/images/homme/torse-2.jpg', alt: 'Épilation abdomen avant/après' },
      { src: '/images/homme/torse-3.jpg', alt: 'Résultat épilation torse complet' },
      { src: '/images/homme/torse-4.jpg', alt: 'Épilation poitrine et abdomen' }
    ]
  },
  {
    id: 'dos',
    name: 'Dos',
    images: [
      { src: '/images/homme/dos-1.jpg', alt: 'Épilation laser dos complet' },
      { src: '/images/homme/dos-2.jpg', alt: 'Épilation haut du dos' },
      { src: '/images/homme/dos-3.jpg', alt: 'Résultat épilation dos homme' }
    ]
  },
  {
    id: 'bras',
    name: 'Bras',
    images: [
      { src: '/images/homme/bras-1.jpg', alt: 'Épilation laser bras complets' },
      { src: '/images/homme/bras-2.jpg', alt: 'Épilation avant-bras' },
      { src: '/images/homme/bras-3.jpg', alt: 'Résultat épilation bras homme' }
    ]
  },
  {
    id: 'bikini',
    name: 'Bikini',
    images: [
      { src: '/images/homme/bikini-1.jpg', alt: 'Épilation maillot homme' },
      { src: '/images/homme/bikini-2.jpg', alt: 'Épilation bikini intégral' },
      { src: '/images/homme/bikini-3.jpg', alt: 'Résultat épilation maillot' }
    ]
  },
  {
    id: 'tempes-joues',
    name: 'Tempes et Joues',
    images: [
      { src: '/images/homme/tempes-1.jpg', alt: 'Épilation tempes homme' },
      { src: '/images/homme/tempes-2.jpg', alt: 'Épilation joues' },
      { src: '/images/homme/tempes-3.jpg', alt: 'Résultat épilation tempes et joues' }
    ]
